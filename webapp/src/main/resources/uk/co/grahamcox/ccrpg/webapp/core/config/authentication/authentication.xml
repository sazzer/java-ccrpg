<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="nonceGenerator" class="uk.co.grahamcox.ccrpg.authentication.external.UUIDNonceGenerator" />

    <bean id="authenticationService" class="uk.co.grahamcox.ccrpg.authentication.external.AuthenticationService">
        <constructor-arg>
            <map>
                <entry key="google">
                    <bean class="uk.co.grahamcox.ccrpg.authentication.external.google.GoogleAuthenticator">
                        <constructor-arg index="0">
                            <bean class="uk.co.grahamcox.ccrpg.authentication.external.google.ConfigLoader" />
                        </constructor-arg>
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

</beans>


